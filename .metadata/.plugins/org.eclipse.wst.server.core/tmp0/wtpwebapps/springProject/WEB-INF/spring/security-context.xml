<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:security="http://www.springframework.org/schema/security"
	xsi:schemaLocation="http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security-5.8.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- spring Bean Configuration file로 생성하여 namespace에서 beans와 security 체크 
         비밀번호 암호화 처리를 해줄 수 있는 BcryptPasswordEncoder를 등록하여 사용할것
    -->
    
    <bean class="org.springframework.security.crypto.bcrypt.BCryptPasswordEncoder" id="bcrypt"></bean>

</beans>
